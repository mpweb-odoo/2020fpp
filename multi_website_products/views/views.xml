<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="priority">999</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='shop']/group/group/field[@name='website_id']" position="after">
                    <field name="website_ids" widget="many2many_tags" options="{'no_create': True}" groups="website.group_multi_website"/>
                </xpath>
            </field>
        </record>
        <record id="website_sale_pricelist_form_view" model="ir.ui.view">
            <field name="name">website.sale.pricelist.form.view</field>
            <field name="model">product.pricelist</field>
            <field name="priority">999</field>
            <field name="inherit_id" ref="website_sale.website_sale_pricelist_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website_id']" position="after">
                    <field name="website_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
